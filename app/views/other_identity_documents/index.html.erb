<%= page_title 'hub.other_documents.title_other_identity_documents' %>
<% content_for :feedback_source, 'OTHER_IDENTITY_DOCUMENTS_PAGE' %>

<div id="no-documents-message" class="visually-hidden" aria-live="assertive" data-no-documents-message="<%= h t('hub.select_documents.no_documents_message') %>"></div>

<div class="govuk-grid-column-three-quarters">
  <h1 class="govuk-heading-l"><%= t 'hub.other_documents.title_other_identity_documents' %></h1>
  <p><%= t 'hub.select_documents.documents_from_other_countries' %></p>

  <div class="govuk-inset-text">
    <%= t 'hub.select_documents.highlight' %>
  </div>

  <% if flash[:errors] %>
      <div id="validation-error-message-no-js" class="validation-message form-group">
        <p class="error"><%= flash[:errors] %></p>
      </div>
  <% end %>

  <%= form_for @form, url: other_identity_documents_submit_path, html: {id: 'validate-other-documents', class: 'select-documents-form', novalidate: 'novalidate', 'data-msg': t('hub.select_documents.errors.no_selection')} do |f| %>

    <h2 class="govuk-heading-m"><%= t 'hub.other_documents.non_uk_id_document' %></h2>
      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
            <h1 class="govuk-fieldset__heading">
              <%= t 'hub.other_documents.non_uk_id_document' %>
            </h1>
          </legend>
          <div class="govuk-radios">
            <div class="govuk-radios__item">
              <%= f.radio_button :non_uk_id_document, true, {class: "govuk-radios__input"}%>
              <%= f.label :non_uk_id_document_true, t('hub.select_documents.documents_option_yes'), class: "govuk-label govuk-radios__label verify-inverse"%>
            </div>
            <div class="govuk-radios__item">
              <%= f.radio_button :non_uk_id_document, false, {class: "govuk-radios__input"}%>
              <%= f.label :non_uk_id_document_false, t('option.no'), class: "govuk-label govuk-radios__label verify-inverse"%>
            </div>
          </div>
        </fieldset>
      </div>

      <div id="validation-error-message-js"></div>

      <div class="actions">
        <%= f.submit t('navigation.continue'), class: 'govuk-button', id: 'next-button' %>
      </div>
  <% end %>


</div>
