<%= page_title 'hub.about_identity_accounts.title' %>
<% content_for :feedback_source, 'ABOUT_IDENTITY_ACCOUNTS_PAGE' %>
<% # Uses slide layout %>

<%= t 'hub.about_identity_accounts.content_loa1_html' %>

<div class="actions">
  <%= button_link_to t('navigation.start_now'), choose_a_certified_company_path, id: 'next-button', class: "govuk-button verify-inverse-btn" %>
</div>

<details class="govuk-details">
  <summary class="govuk-details__summary">
    <span class="govuk-details__summary-text"><%= t 'hub.about_identity_accounts.summary' %></span>
  </summary>

  <div class="govuk-details__text">
    <p class="govuk-body verify-inverse"><%= t 'hub.about_identity_accounts.details_loa1_html' %></p>
    <ul class="govuk-list govuk-list--bullet verify-inverse">
      <% loa1_transactions_list.each do |transaction| -%>
          <li><%= transaction.name %></li>
      <% end %>
    </ul>

    <p class="govuk-body verify-inverse"><%= t 'hub.about_identity_accounts.details_loa1_uplift_list' %></p>
    <ul class="govuk-list govuk-list--bullet verify-inverse">
      <% loa2_transactions_list.each do |transaction| -%>
          <li><%= transaction.name %></li>
      <% end %>
    </ul>
  </div>
</details>
